<!DOCTYPE html>
<html>

<head>
    <title>Password Reset</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            background-color: #f4f4f4;
        }

        nav {
            position: absolute;
            top: 0;
            padding: 10px 0;
            width: 100%;
            background-color: #fff;
            padding: 10px 0;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: start;
        }

        nav a {
            text-decoration: none;
            color: black;
            display: flex;
            align-items: center;
            gap: 10px;

        }

        nav img {
            width: 60px;
            margin: 0 auto;
            display: block;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: black;
        }

        form {
            background: #fff;
            padding: 40px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 350px;
            width: 100%;
        }

        label {
            display: block;
            color: black;
            margin: 10px 0 5px;
        }

        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }

        button {
            margin-top: 10px;
            width: 100%;
            padding: 10px;
            background-color: rgb(14 165 233);
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        button:hover {
            background-color: rgb(14 165 233 / 80%);
        }

        p {
            margin-top: 10px;
            text-align: center;
            color: gray;
        }

        a {
            color: rgb(14 165 233);
        }

        a:hover {
            text-decoration: underline;
        }

        @media (max-width: 500px) {

            nav {
                justify-content: center;
            }

            form {
                padding: 20px;
                max-width: 250px;
            }

            input[type="password"] {
                width: 100%;
            }

            button {
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <nav>
        <a href="/login">
            <img src="https://upload.wikimedia.org/wikipedia/en/b/b1/Dhirubhai_Ambani_Institute_of_Information_and_Communication_Technology_logo.png"
                alt="Google Logo">
            <h1>DAIICT</h1>
        </a>
    </nav>

    <h2>Reset Password</h2>
    <form>
        <label for="newPassword">New Password:</label>
        <input type="password" name="newPassword" id="newPassword" required>
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required>
        <button type="submit">Reset Password</button>
        {{!-- <p>Click <a href="/">here</a> to go back to the login page</p> --}}
    </form>
</body>

<script>
    const form = document.querySelector('form');
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        if (newPassword !== confirmPassword) {
            alert('Passwords do not match');
            return;
        }
        const token = '{{token}}';
        console.log(token);
        const response = await fetch(`/reset/resetPassword?resetToken=${token}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ newPassword })
        });
        console.log(response);
        if (response.ok) {
            alert('Password reset successfully, close this tab');
            window.location.href = '/';
        } else {
            alert('Password reset failed');
        }
    });
</script>

</html>